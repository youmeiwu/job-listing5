<tr>
  <td>
    <%= render_job_status(job) %>
    <%= link_to(job.title, admin_job_path(job)) %>
  </td>
  <td><%= simple_format(job.description) %></td>
  <td>
    <%= link_to("Edit", edit_admin_job_path(job)) %>
    |
    <%= link_to("Destroy", admin_job_path(job), method: :delete) %>
    <% if job.is_hidden %>
      <%= link_to("Public", publish_admin_job_path(job), method: :post, class: "btn btn-default btn-xs") %>
    <% else %>
      <%= link_to("Hide", hide_admin_job_path(job), method: :post, class: "btn btn-default btn-xs") %>
      <% end %>
  </td>
  <td><%= job.created_at %></td>

</tr>
